@using FinalWork_BD_Test.Data.Models.Profiles
@model FinalWork_BD_Test.Areas.Admin.Models.UserProfileViewModel

<p><button class="btn btn-info" asp-action="EditUser">Новый пользователь</button></p>

<table class="table table-hover table-sm table-striped col-md-12">
    <tr>
        <th style="display:none">ID</th>
        <th scope="row">Email</th>
        <th scope="row">Номер телефона</th>
        <th scope="row">Фамилия</th>
        <th scope="row">Имя</th>
        <th scope="row">Отчество</th>
        <th scope="row"></th>
    </tr>
    @foreach (UserProfile u in Model.UserProfiles)
    {
        <tr>
            @if (u.User != null)
            {
                <td style="display:none">@u.User.Id</td>
                <td>@u.User.Email</td>
                <td>@u.User.PhoneNumber</td>
            }
            else
            {
                <td style="display: none">-</td>
                <td>-</td>
                <td>-</td>
            }
            <td>@u.SecondNameIP</td>
            <td>@u.FirstNameIP</td>
            <td>@u.MiddleNameIP</td>
            <td><a class="btn-sm btn-secondary" asp-action="EditUser" asp-route-id="@u.Id">Изменить</a>
                <a class="btn-sm btn-primary" asp-action="DeleteUser" asp-route-id="@u.Id">Удалить</a></td>
        </tr>
    }
</table>
@if (Model.PageViewModel.HasPreviousPage)
{
    <a asp-action="AllUsers"
       asp-route-page="@(Model.PageViewModel.PageNumber - 1)"
       class="btn btn-outline-dark">
        <i class="glyphicon glyphicon-chevron-left"></i>
        Назад
    </a>
}
@if (Model.PageViewModel.HasNextPage)
{
    <a asp-action="AllUsers"
       asp-route-page="@(Model.PageViewModel.PageNumber + 1)"
       class="btn btn-outline-dark">
        Вперед
        <i class="glyphicon glyphicon-chevron-right"></i>
    </a>
}
