@model FinalWork_BD_Test.Data.Models.Profiles.ReviewerProfile

@{
    ViewData["Title"] = "View";
}
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="FirstNameIP" class="control-label"></label>
            <input asp-for="FirstNameIP" class="form-control" />
            <span asp-validation-for="FirstNameIP" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="SecondNameIP" class="control-label"></label>
            <input asp-for="SecondNameIP" class="form-control" />
            <span asp-validation-for="SecondNameIP" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="MiddleNameIP" class="control-label"></label>
            <input asp-for="MiddleNameIP" class="form-control" />
            <span asp-validation-for="MiddleNameIP" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="JobPlace" class="control-label"></label>
            <input asp-for="JobPlace" class="form-control" />
            <span asp-validation-for="JobPlace" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="JobPost" class="control-label"></label>
            <input asp-for="JobPost" class="form-control" />
            <span asp-validation-for="JobPost" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="AcademicTitleId" class="control-label"></label>
            @Html.DropDownList("AcademicTitleId", ViewData["AcademicTitleId"] as SelectList,
                new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label asp-for="AcademicDegreeId" class="control-label"></label>
            @Html.DropDownList("AcademicDegreeId", ViewData["AcademicDegreeId"] as SelectList,
                new { @class = "form-control" })
        </div>
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </form>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
