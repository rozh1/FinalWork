@using System
@model Tuple<FinalWork_BD_Test.Data.Models.Profiles.UserProfile, FinalWork_BD_Test.Data.Models.Profiles.LecturerProfile>

    <form method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Item1.SecondNameIP"></label>
            <input asp-for="Item1.SecondNameIP" class="form-control" />
            <span asp-validation-for="Item1.SecondNameIP" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Item1.FirstNameIP"></label>
            <input asp-for="Item1.FirstNameIP" class="form-control" />
            <span asp-validation-for="Item1.FirstNameIP" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Item1.MiddleNameIP"></label>
            <input asp-for="Item1.MiddleNameIP" class="form-control" />
            <span asp-validation-for="Item1.MiddleNameIP" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Item2.JobPlace" class="control-label"></label>
            <input asp-for="Item2.JobPlace" class="form-control" />
            <span asp-validation-for="Item2.JobPlace" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Item2.JobPost" class="control-label"></label>
            <input asp-for="Item2.JobPost" class="form-control" />
            <span asp-validation-for="Item2.JobPost" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Item2.AcademicTitleId" class="control-label"></label>
            @Html.DropDownList("Item2.AcademicTitleId", ViewData["Item2.AcademicTitleId"] as SelectList,
                new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label asp-for="Item2.AcademicDegreeId" class="control-label"></label>
            @Html.DropDownList("Item2.AcademicDegreeId", ViewData["Item2.AcademicDegreeId"] as SelectList,
                new { @class = "form-control" })
        </div>
        <button type="submit" class="btn btn-primary">Добавить</button>

    </form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


