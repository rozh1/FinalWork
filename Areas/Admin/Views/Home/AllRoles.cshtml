@model IEnumerable<FinalWork_BD_Test.Data.Models.Role>

<h2>Список ролей</h2>
<table class="table">
	@foreach (var role in Model)
	{
		<tr>
			<td>@role.Name</td>
			<td>
				<form asp-action="DeleteRole" asp-route-id="@role.Id" method="post">
					<button type="submit" class="btn btn-sm btn-danger">
						Удалить
					</button>
				</form>
			</td>
		</tr>
	}
</table>
<a class="btn btn-sm btn-primary" asp-action="CreateRole">Добавить роль</a>
