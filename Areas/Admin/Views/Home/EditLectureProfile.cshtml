@using FinalWork_BD_Test.Areas.Admin.Views
@model FinalWork_BD_Test.Data.Models.Profiles.LecturerProfile

@{
    ViewData["ActiveView"] = AdminNavBar.AllUsers;
}

<h4>Дополнительные сведения</h4>
<hr />
<div class="row">
    <div class="col-md-8">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="Id" name="Id" style="display: none" value="@Model.Id"/>
            </div>
            <div class="form-group">
                <input asp-for="User.Id" name="User.Id" style="display: none" value="@Model.User.Id"/>
            </div>
            <div class="form-group">
                <label asp-for="FirstNameRP" class="control-label"></label>
                <input asp-for="FirstNameRP" name="FirstNameRP" class="form-control"/>
                <span asp-validation-for="FirstNameRP" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SecondNameRP" class="control-label"></label>
                <input asp-for="SecondNameRP" name="SecondNameRP" class="form-control"/>
                <span asp-validation-for="SecondNameRP" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MiddleNameRP" class="control-label"></label>
                <input asp-for="MiddleNameRP" name="MiddleNameRP" class="form-control"/>
                <span asp-validation-for="MiddleNameRP" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FirstNameDP" class="control-label"></label>
                <input asp-for="FirstNameDP" name="FirstNameDP" class="form-control"/>
                <span asp-validation-for="FirstNameDP" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SecondNameDP" class="control-label"></label>
                <input asp-for="SecondNameDP" name="SecondNameDP" class="form-control"/>
                <span asp-validation-for="SecondNameDP" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MiddleNameDP" class="control-label"></label>
                <input asp-for="MiddleNameDP" name="MiddleNameDP"class="form-control" />
                <span asp-validation-for="MiddleNameDP" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AcademicDegreeId" class="control-label"></label>
                @Html.DropDownList("AcademicDegreeId", ViewData["AcademicDegreeId"] as SelectList, 
                    new { @class = "form-control"})
                <span asp-validation-for="AcademicDegreeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AcademicTitleId" class="control-label"></label>
                @Html.DropDownList("AcademicTitleId", ViewData["AcademicTitleId"] as SelectList, 
                    new { @class = "form-control"})
                <span asp-validation-for="AcademicTitleId" class="text-danger"></span>
            </div>
            <div class="form-group">
		        <input type="submit" value="Сохранить" class="btn btn-primary" />
	        </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
